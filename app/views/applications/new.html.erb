<h1>New Application</h1>

<%= form_for [@application.job, @application] do |f| %>
  <%= f.hidden_field :job_id, value: @application.job_id %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
